scwin.tData = {
    "description" : "[common > M > setSize]<br/>컴포넌트의 특정 영역 크기(width, height)를 픽셀 단위로 반환합니다.",
    "validation" : [
        "sizeName(필수) 파라미터로 'height' 설정 시 clientHeight 값이 반환되어야 합니다.",
        "sizeName(필수) 파라미터로 'innerHeight' 설정 시 clientHeight + padding 값이 반환되어야 합니다.",
        "sizeName(필수) 파라미터로 'outerHeight' 설정 시 clientHeight + padding + border 값이 반환되어야 합니다.",
        "sizeName(필수) 파라미터로 'outerMarginHeight' 설정 시 clientHeight + padding + border + margin 값이 반환되어야 합니다.",
        "sizeName(필수) 파라미터로 'width' 설정 시 clientWidth 값이 반환되어야 합니다.",
        "sizeName(필수) 파라미터로 'innerWidth' 설정 시 clientWidth + padding 값이 반환되어야 합니다.",
        "sizeName(필수) 파라미터로 'outerWidth' 설정 시 clientWidth + padding + border 값이 반환되어야 합니다.",
        "sizeName(필수) 파라미터로 'outerMarginWidth' 설정 시 clientWidth + padding + border + margin 값이 반환되어야 합니다.",
    ]
}



scwin.onpageload = function () {
    // 테스트 설명, 유효성 생성
    wf_body_left.getObj("scwin").createValidation(scwin.tData);
};



// comp 재생성
scwin.comp_init = function () {
    // comp 생성 호출
    objParent.scwin.comp_init();
};



scwin.btn_setSize_onclick = function (e) {
    pWdith = par_width.getValue();
    pHeight = par_height.getValue();

    if(pWdith == "null")
        pWdith = null;
    if(pHeight == "null")
        pHeight = null;   

    if (pWdith != "") {
        if (pHeight != "") {
             objParent.target1.setSize(pWdith, pHeight);
        }
        else {
            objParent.target1.setSize(pWdith);
        }
    }
    else
        objParent.target1.setSize();
};



scwin.btn_getSize_onclick = function (e) {
    let rtn = objParent.target1.getSize(par_sizeName.getText());
    wf_body_bottom.getObj("scwin").setReturnValue("getSize : " + rtn);  
};
]]></script>
