    objParent.scwin.comp_init();
};



scwin.btn_setOpacity_onclick = function (e) {
    if (sub_type.getText() == "string")
        objParent.target1.setOpacity(par_value.getValue());
    else    
        objParent.target1.setOpacity(Number(par_value.getValue()));
};



scwin.btn_getOpacity_onclick = function (e) {
    let rtn = '';
    
    rtn = objParent.target1.getOpacity();
    wf_body_bottom.getObj("scwin").setReturnValue("getOpacity : " + rtn);
};



scwin.byn_getStyle_onclick = function (e) {
    let rtn = '';
    
    rtn = objParent.target1.getStyle("opacity");
    wf_body_bottom.getObj("scwin").setReturnValue("getStyle : " + rtn);
};
