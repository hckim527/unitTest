		<script lazy="false" type="text/javascript"><![CDATA[let objParent = $p.parent();

let cLocaleRef = '';
let cUseLocale = '';
let cTooltipLocaleRef = '';



// 테스트 설명, 유효성 값 설정
scwin.tData = {
    "description" : "[common > P > useLocale]<br/>컴포넌트의 텍스트와 툴팁 표시에 클라이언트 다국어 기능을 사용할지 여부를 설정합니다.",
    "validation" : [
        "true 설정 시 클라이언트 다국어 기능을 사용하여 컴포넌트에 해당 언어의 텍스트와 툴팁을 표시하여야 합니다.",
        "false 설정 시클라이언트 다국어 기능을 사용하지 않아야 합니다.",
        "미설정 시 클라이언트 다국어 기능을 사용하지 않아야 합니다.",
    ]
}



scwin.onpageload = function () {
    $c.gcm.createCommonDatalist();

    // 테스트 설명, 유효성 생성
    wf_body_left.getObj("scwin").createValidation(scwin.tData);
};




// comp 재생성
scwin.comp_init = function () {
    // 조건 설정
    cLocaleRef = con_localeRef.getValue();
    cUseLocale = con_useLocale.getText();
    cTooltipLocaleRef = con_tooltipLocaleRef.getValue();

    // 테스트 샘플에 재생성 조건 값 전달
    objParent.scwin.gVar["cLocaleRef"] = cLocaleRef;
    objParent.scwin.gVar["cUseLocale"] = cUseLocale;
    objParent.scwin.gVar["cTooltipLocaleRef"] = cTooltipLocaleRef;

    // comp 생성 호출
    objParent.scwin.comp_init();
};



scwin.btn_getText_onclick = function (e) {
    rtn = objParent.target1.render.innerText
    wf_body_bottom.getObj("scwin").setReturnValue("text : " + rtn);    
};



objParent.scwin.target1_onclick = function (e) {
    // text 확인
    rtn = objParent.target1.render.innerText
    wf_body_bottom.getObj("scwin").setReturnValue("text : " + rtn);    
    
    rtn = objParent.target1.render.ariaDescribedByElements

    // tooltip 확인
    if(rtn)
        wf_body_bottom.getObj("scwin").setReturnValue("tooltip : " + rtn[0].textContent);  
}]]></script>
