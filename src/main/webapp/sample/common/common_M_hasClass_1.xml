scwin.tData = {
    "description" : "[common > M > hasClass]<br/>컴포넌트에 특정 CSS 클래스가 적용되어 있는지 여부를 반환합니다.",
    "validation" : [
        "className(필수) 파라미터로 클래스 이름을 문자열로 설정할 수 있어야 합니다.",
        "클래스가 적용 되었으면 true 를 반환하여야 합니다.",
        "클래스가 적용 되지 않았으면 false 를 반환하여야 합니다.",
    ]
}



scwin.onpageload = function () {
    // 테스트 설명, 유효성 생성
    wf_body_left.getObj("scwin").createValidation(scwin.tData);
};



// comp 재생성
scwin.comp_init = function () {
    // comp 생성 호출
    objParent.scwin.comp_init();
};



// 테스트 수행
scwin.btn_addClass_onclick = function (e) {
    pClassName = par_className_add.getText();

    objParent.target1.addClass(pClassName);
};



// 테스트 행
scwin.btn_hasClass_onclick = function (e) {
    pClassName = par_className_has.getValue();

    console.log(pClassName);

    rtn = objParent.target1.hasClass(pClassName);        

    wf_body_bottom.getObj("scwin").setReturnValue("return : " + rtn);   
};
]]></script>
