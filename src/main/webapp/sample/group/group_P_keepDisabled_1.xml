    scwin.comp_init();
};



// comp 생성
scwin.comp_init = async function () {
    // comp 렌더링 할 객체 가져오기    
    if (typeof wf_sample !== 'undefined') {
        let wf_body_sample = wf_sample.getObj("wf_body_sample");
        grp_comp = wf_body_sample.getObj("grp_comp");
    }
    else {        
        grp_comp = wf_body_sample.getObj("grp_comp"); 
    }

    // 기존 target 있으면 삭제
    if (typeof target1 !== 'undefined') {
        target1.remove();
    }

    // 조건 설정
    cKeepDisabled = con_keepDisabled.getText();   
    
    let properties = {
        keepDisabled: cKeepDisabled,
    };

    let cList = $c.gcm.createCList(properties);

    // 기본 group 생성
    $c.gcm.createBasicGroup(grp_comp, cList);
}



// 테스트 수행
scwin.btn_setDisabled_onclick = function (e) {
    target1.setDisabled(par_disabled.getText());
};
